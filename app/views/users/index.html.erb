<div class="container">
  <div class="users-index-page">
    <h1>Edit Any User or Home</h1>
    <table class="table">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Edit Account</th>
          <th>Edit Home (if Host)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @users.each do |user| %>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Edit User Account", edit_user_path(user) %></td>
            <td>  <% if user.home %>
                <%= link_to "Edit User Home", edit_home_path(user.home.city, user.home) %>
              <% end %></td>
          <% end %>
        </tr>
    </tbody>
    </table>
  </div>
</div>

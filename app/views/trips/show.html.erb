<div class="container">
  <div class="row">
    <div class="page-header">
      <h1>My Trips</h1>
    </div>

    <div class="trips">
      <% @trips.each do |trip| %>
                <table class="table">
                  <thead class="thead-inverse">
                    <tr>
                      <th>Past Trips</th>
                    </tr>
                  </thead>
                  <tbody>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">
              Trip Booked on <%= trip.word_date(trip.created_at) %>
              for <%= trip.reservations.count %> basement(s)
            </h3>
          </div>
          <div class="panel-body">
            <div class="trip-info">
              <tbody>
              <% trip.reservations.each do |reservation| %>
                <td><%= Home.find(reservation.home_id).title %></td>
                <td><% if trip.reviewed? %>
                  <%= button_to "Review this Trip", new_review_path %>
              <% end %></td>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

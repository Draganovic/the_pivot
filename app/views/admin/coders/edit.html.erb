<div class="user-form">
  <h2>Update Genius Profile</h2>
  <%= form_for([:admin, @coder]) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :category_id %>
    <%= f.select :category_id, options_for_select(Category.all.map{|c| [c.name, c.id]}), value: @coder.category %>
    <%= f.label :experience %>
    <%= f.text_field :experience %>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
    <%= f.label :cost %>
    <%= f.text_field :cost %>
    <%= f.label :active %>
    <%= f.select :active, ['true', 'false']%>
    <%= f.submit "Update", class: "add-button" %>
  <% end %>
</div>
